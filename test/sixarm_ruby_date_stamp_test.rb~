# -*- coding: utf-8 -*-
require 'test/unit'
require 'simplecov'
SimpleCov.start
require 'sixarm_ruby_date_stamp'

class DateTest < Test::Unit::TestCase

 def test_stamp_with_class_method
   t=Date.stamp
   assert(t=~/^\d\d\d\d-\d\d-\d\d \d\d:\d\d:\d\dZ$/,t)
 end

 def test_stamp_with_instance_method
   t=Date.now.stamp
   assert(t=~/^\d\d\d\d-\d\d-\d\d \d\d:\d\d:\d\dZ$/,t)
 end
 
end

